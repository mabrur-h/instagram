<%- include('parts/header') %>
<% var error %>

<section class="vh-100 d-flex flex-column justify-content-center align-items-center registration">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card text-center p-4">
                    <img src="img/instagram-logo.png" alt="Instagram" class="registration-logo mx-auto">
                    <strong class="text-muted registration-slogan">
                        Sign up to see photos and videos from your friends.
                    </strong>
                    <form action="/signup" method="post" class="mt-4">
                        <% if ( error ) { %>
                            <div class="alert alert-danger">
                                <small><%= error %></small>
                            </div>
                        <% } %>
                        <input type="tel" class="form-control my-2 bg-light" name="phone" placeholder="Mobile number">
                        <input type="text" class="form-control my-2 bg-light" name="name" placeholder="Full name">
                        <input type="text" class="form-control my-2 bg-light" name="username" placeholder="Username">
                        <input type="password" class="form-control my-2 bg-light" name="password" placeholder="Password">
                        <button type="submit" class="btn btn-primary w-100">Sign up</button>
                    </form  >
                    <p class="mt-4 text-muted">By signing up, you agree to our <a target="_blank"
                                                                                  href="https://help.instagram.com/581066165581870" tabindex="0">Terms</a>, <a
                                target="_blank" href="https://help.instagram.com/519522125107875" tabindex="0">Data
                            Policy</a> and <a target="_blank" href="/legal/cookies/" tabindex="0">Cookies Policy</a> .
                    </p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card d-flex text-center p-4 align-items-center">
                    <p class="m-0 p-0">Have an account? <a href="/login">Log in</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('parts/footer') %>
